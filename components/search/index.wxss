/* components/view-title/index.wxss */
@import "../../assets/css/public.wxss";
.cer_nav_form {
  height: 88rpx;
  background: #F5F5F5;
  opacity: 1;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  padding:28rpx;
  box-sizing: border-box;
}
.cer_nav_left{
  width: 80%;
}
.cer_nav_right{
  display: flex;
  align-items: center;
}
.right_line {
  height: 42rpx;
  border: 1rpx solid #E5E5E5;
  width:1rpx;
  margin-right: 30rpx;
}

.view_search {
  font-size: 28rpx;
  font-weight: 400;
  color: #E4B646;
  
}
.clearIcon{
  font-size:35rpx;
  padding:20rpx 30rpx;
  box-sizing: border-box;
}
.weui-inputs{
  color: #333333;
  font-size:28rpx;
  width: 80%;
}
.input-placeholder{
  color: #999999;
  font-size:28rpx;

}